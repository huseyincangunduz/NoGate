<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout         xmlns:android="http://schemas.android.com/apk/res/android"
                     xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorPrimary"
                      android:orientation="vertical"
             tools:context=".AboutActivity">


    <ImageView
            android:src="@drawable/nogatetext"
            android:layout_width="match_parent"
            android:layout_height="92dp" android:id="@+id/imageView2" android:layout_weight="1"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="28dp" android:layout_marginEnd="10dp" android:layout_marginStart="10dp"/>
    <TextView
            android:layout_width="match_parent"
            android:text="@string/about_text"
            android:id="@+id/textView"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1" android:textColor="@android:color/background_light"
            android:textAlignment="center" android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="138dp" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
    <Button
            android:text="NoGate sayfası"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/button"
             android:layout_marginEnd="10dp"
            android:onClick="opennogatesite"
            android:layout_marginStart="10dp"/>
    <Button
            android:text="Açık kaynak dosyaları"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"

            android:onClick="showSrcLicenses"
            android:layout_alignParentEnd="true" android:layout_above="@+id/button" android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>
</RelativeLayout>